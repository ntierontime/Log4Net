@model Log4Net.AspNetMvc40Rasor.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = Framework.Resx.UIStringResource.Account_ExternalLogin_AssociationTitleText;
}
<hgroup>
    <h2>@ViewBag.Title.</h2>
    <h4>@string.Format(Framework.Resx.UIStringResource.Account_ExternalLogin_AssociateExternalLoginTitle, ViewBag.ProviderDisplayName)</h4>
</hgroup>
@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@Framework.Resx.UIStringResource.Account_ExternalLogin_AssociateExternalLoginLegend</legend>
        <p>@string.Format(Framework.Resx.UIStringResource.Account_ExternalLogin_AssociateExternalLoginSuccess, ViewBag.ProviderDisplayName)
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="@Framework.Resx.UIStringResource.Account_ExternalLogin_AssociationSubmitValue" />
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
